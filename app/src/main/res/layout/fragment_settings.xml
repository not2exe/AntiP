<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:background="@color/colorAccent"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textUseful"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/useful"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvUseful"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textHarmful"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/harmful"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHarmful"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textOthers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/others"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOthers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>