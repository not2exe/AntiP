<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Text.Item" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:letterSpacing">
            0.02
        </item>
    </style>

    <style name="Button">
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DialogCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_dialog_corners</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_dialog_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
    </style>

    <style name="Text.TitleExtraLarge" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="cornerRadius">8dp</item>
    </style>


</resources>